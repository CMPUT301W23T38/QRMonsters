<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A7DEE9"
    tools:context=".searchNearbyQR">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAAF26"
        android:minHeight="?actionBarSize">

        <TextView
            android:id="@+id/playerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="PLAYER PROFILE"
            android:textColor="#616161"
            android:textSize="35sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAYER NAME"
        android:textColor="#455A64" />

    <TextView
        android:id="@+id/playerScoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAYER SCORE"
        android:textColor="#455A64" />

    <TextView
        android:id="@+id/playerQRcountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAYER QRCount"
        android:textColor="#455A64" />

    <TextView
        android:id="@+id/highestQRTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAYER Highest QR Score"
        android:textColor="#455A64" />

    <TextView
        android:id="@+id/lowestQRTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAYER Lowest QR Score"
        android:textColor="#455A64" />
    <ListView
        android:id="@+id/playerQRList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </ListView>

</LinearLayout>