<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A7DEE9"
    tools:context=".searchNearbyQR">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:srcCompat="@drawable/earth" />

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/name"
        android:textColor="#757575"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/playerScoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CURRENT SCORE:"
        android:textColor="#757575"
        android:padding="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/playerQRcountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="# OF QR CODES:"
        android:textColor="#757575"
        android:padding="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/highestQRTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HIGHEST QR SCORE:"
        android:textColor="#757575"
        android:padding="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lowestQRTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="LOWEST QR SCORE:"
        android:textColor="#757575"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/playerEstimatedRankingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTIMATED RANKING: "
        android:textColor="#757575"
        android:padding="8dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:rotationX="23"
        android:text="QR CODES (NAME/SCORE)"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/playerQRList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EAAF26"
        android:outlineProvider="none"
        android:text="@string/back_to_home"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />
</LinearLayout>